{
  "coc.preferences.formatOnSave": true,
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", "./git", ".hg/"],
      "filetypes": ["go"]
    },
    "python": {
      "command": "pyright-langserver",
      "args": ["--stdio"],
      "filetypes": ["python"],
      "rootPatterns": [
        ".git/",
        "setup.py",
        "setup.cfg",
        "pyproject.toml",
        "requirements.txt"
      ],
      "settings": {
        "python.pythonPath": "/usr/bin/python3"
      }
    }
  }
}
