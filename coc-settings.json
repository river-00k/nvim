{
  "coc.preferences.formatOnSave": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "html",
    "markdown",
    "typescriptreact",
    "typescript",
    "javascriptreact",
    "javascript",
    "json",
    "graphql",
    "go"
  ],
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", "./git", ".hg/"],
      "filetypes": ["go"]
    }
  }
}
